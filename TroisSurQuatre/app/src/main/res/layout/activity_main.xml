<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center">


        <Button
            android:id="@+id/button_maison"
            android:background="@drawable/maison"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:text="Maison"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:textSize="30dp"/>
        <Button
            android:id="@+id/button_saisons"
            android:background="@drawable/saisons"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:text="4 Saisons"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:textSize="28dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_theme"
            android:text="Choisissez"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textIsSelectable="true"
            android:textSize="80dp"
            android:layout_alignBaseline="@+id/button_maison"
            android:layout_alignBottom="@+id/button_maison"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

      <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="47dp"
          android:gravity="center">
        <ImageView
             android:id="@+id/button_aleatoire"
             android:layout_width="100dp"
             android:layout_height="200dp"
             android:adjustViewBounds="true"
             android:scaleType="fitCenter"
             android:textSize="34dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

      </RelativeLayout>

    <RelativeLayout
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center">
        <Button
            android:id="@+id/button_shopping"
            android:background="@drawable/courses"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentLeft="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:text="Courses"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:textSize="30sp"/>
        <Button
            android:id="@+id/button_promenade"
            android:background="@drawable/promenade"
            android:layout_width="300dp"
            android:layout_height="400dp"
            android:layout_alignParentRight="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:layout_gravity="center"
            android:text="Promenade"
            android:textStyle="bold"
            android:gravity="bottom|center"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview_untheme"
            android:text="un thÃ¨me"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:gravity="top|center"
            android:textIsSelectable="true"
            android:textSize="80dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>
</LinearLayout>


