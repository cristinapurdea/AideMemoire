<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="346dp">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton3"
            android:background="@drawable/sound"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textSize="40dp"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:layout_below="@+id/imageButton4"
            android:layout_toStartOf="@+id/button6"
            android:layout_alignRight="@+id/button7"
            android:layout_alignEnd="@+id/button7"
            android:layout_alignParentBottom="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Quitter"
            android:id="@+id/button6"
            android:textStyle="bold"
            android:textSize="20dp"
            android:background="#ffffdf39"
            android:clickable="true"
            android:layout_below="@+id/imageButton3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Sauter cette question"
            android:id="@+id/button7"
            android:layout_alignParentEnd="true"
            android:textSize="20dp"
            android:background="#ffffdf39"
            android:textStyle="bold"
            android:clickable="true"
            android:layout_margin="5dp"
            android:layout_below="@+id/button6"
            android:layout_alignParentRight="true" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageButton4"
            android:background="@drawable/help"
            android:layout_below="@+id/imageButton3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/imageButton3"
            android:layout_alignEnd="@+id/imageButton3"
            android:layout_alignBottom="@+id/button7" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/answer_1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="false"
            android:clickable="true"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/answer_2"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_toRightOf="@+id/answer_1"
            android:clickable="true"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/answer_3"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_toRightOf="@+id/answer_2"
            android:clickable="true"
            android:onClick="buttonClick" />

        <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:id="@+id/answer_4"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="30dp"
            android:gravity="center"
            android:layout_margin="30dp"
            android:layout_toRightOf="@+id/answer_3"
            android:clickable="true"
            android:onClick="buttonClick" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|fill_vertical"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/answer_1"
            android:layout_alignStart="@+id/answer_1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|fill_vertical"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/textView7"
            android:layout_toRightOf="@+id/answer_1"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|fill_vertical"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/answer_2"
            android:layout_toRightOf="@+id/answer_2"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textSize="50dp"
            android:textStyle="bold"
            android:gravity="center_horizontal|fill_vertical"
            android:textIsSelectable="false"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/answer_3"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/answer_3" />
    </RelativeLayout>

</LinearLayout>